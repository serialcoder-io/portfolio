generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  username String @unique
  password String
}

enum ProjectStatus {
  finished
  inProgress
}

model Project {
  id           Int            @id @default(autoincrement())
  title        String         @unique
  description  String
  urlVideoDemo String?
  liveDemo     String?
  repoUrl      String?
  status       ProjectStatus  @default(finished)
  images       Image[]
  tools        ProjectTools[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model Image {
  id        Int     @id @default(autoincrement())
  url       String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId Int
}

enum ToolType {
  language
  framework
  library
  tool
  database
  testing
  other
}

model Tool {
  id          Int               @id @default(autoincrement())
  name        String            @unique
  logo        String?
  website     String?
  toolType    ToolType          @default(other)
  projects    ProjectTools[]
  experiences ExperienceTools[]
}

enum ExperienceType {
  freelance
  perm
  ftc
  internship
}

model Experience {
  id          Int               @id @default(autoincrement())
  type        ExperienceType    @default(freelance)
  title       String
  description String
  startDate   DateTime
  endDate     DateTime
  company     String?
  tools       ExperienceTools[]
}

model ProjectTools {
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
  tool      Tool    @relation(fields: [toolId], references: [id])
  toolId    Int

  @@id([projectId, toolId])
}

model ExperienceTools {
  experience   Experience @relation(fields: [experienceId], references: [id])
  experienceId Int
  tool         Tool       @relation(fields: [toolId], references: [id])
  toolId       Int

  @@id([experienceId, toolId])
}
